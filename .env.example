# ============================================
# MT Premiado API Extract - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e preencha com seus valores
# NUNCA commite o arquivo .env no Git!

# ============================================
# Credenciais de Autenticação (OBRIGATÓRIAS)
# ============================================
MT_PREMIADO_EMAIL=seu_email@exemplo.com
MT_PREMIADO_SENHA=sua_senha_aqui

# ============================================
# URLs (Opcionais - valores padrão abaixo)
# ============================================
MT_PREMIADO_BASE_URL=https://omtpremiado.com.br
MT_PREMIADO_LOGIN_URL=https://omtpremiado.com.br/login
MT_PREMIADO_PEDIDOS_URL=https://omtpremiado.com.br/pedidos

# ============================================
# Configurações de Requisição (Opcionais)
# ============================================
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2

# ============================================
# Configurações da API (Opcionais)
# ============================================
API_TITLE=MT Premiado API Extract
API_VERSION=1.0.0
API_DESCRIPTION=API para extração de pedidos detalhados do MT Premiado

# ============================================
# Logging (Opcional)
# ============================================
LOG_LEVEL=INFO

# ============================================
# Debug (Opcionais)
# ============================================
DEBUG_HTML=false
DEBUG_SAVE_HTML=false
DEBUG_MODE=false
DEBUG_SCREENSHOTS=false
DEBUG_TIMING=false
DEBUG_SELECTORS=false
DEBUG_WAIT_TIMES=false
DEBUG_DIR=debug

# ============================================
# Playwright (Opcionais)
# ============================================
USE_PLAYWRIGHT=false
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_WAIT_FOR_SELECTOR=.nk-tb-item

# ============================================
# Exportação e Estado (Opcionais)
# ============================================
EXPORT_JSON=true
DATA_DIR=data
EXPORTS_DIR=data/exports
STATE_FILE=data/last_order_state.json

# ============================================
# CORS (Opcional)
# ============================================
# Use "*" para permitir todas as origens
# Ou separe múltiplas origens por vírgula: "https://app1.com,https://app2.com"
CORS_ORIGINS=*

# ============================================
# Porta (Opcional - para Docker/EasyPanel)
# ============================================
PORT=8000
